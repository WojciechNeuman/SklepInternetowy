@model List<Order>

@{
    ViewData["Title"] = "Search Results";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer ID</th>
                <th>Order Date</th>
                <th>Total Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.CustomerId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.TotalAmount</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found for the specified customer.</p>
}
